@model Rocosa_Modelos.Producto

@{
    var titulo = "Esta seguro que desea eliminar este producto?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar" >
    
        <input asp-for="Id" hidden />
    

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <h2 class="text-danger">@titulo</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="NombreProducto" class="form-label">Nombre del producto</label>
                            <input asp-for="NombreProducto" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Precio" class="form-label">Precio</label>
                            <input asp-for="Precio" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="DescripcionCorta" class="form-label">Descripcion corta</label>
                            <input asp-for="DescripcionCorta" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="row" hidden>
                        <div class="col-md-6">
                            <label asp-for="DescripcionProducto" class="form-label">Descripcion del producto</label>
                            <textarea asp-for="DescripcionProducto" class="form-control summernote"></textarea>
                        </div>
                    </div>
                    <div class="row" hidden>
                        <label asp-for="ImagenUrl" class="form-label">Imagen</label>
                        <input asp-for="ImagenUrl" class="form-control" />
                    </div>
                    <div class="row">
                        <label asp-for="CategoriaId" class="form-label">Categoria</label>
                        <input asp-for="CategoriaId" class="form-control" hidden>
                        <input asp-for="Categoria.NombreCategoria" class="form-control" disabled/>
                    </div>
                    <div class="row">
                        <label asp-for="CategoriaId" class="form-label">Tipo de aplicacion</label>
                        <input asp-for="TipoAplicacionId" class="form-control" hidden>
                        <input asp-for="TipoAplicacion.Nombre" class="form-control" disabled/>
                    </div>
                    <br />

                    <div class="d-grid gap-2 d-md-block">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-controller="Producto" asp-action="Index" class="btn btn-success">Regresar</a>
                    </div>
                </div>
            </div>
            @if (Model.Id != 0)
            {
                <div class="col-4">
                    <img src="@Rocosa_Utilidades.WC.ImagenRuta@Model.ImagenUrl" width="100%" style="border-radius:5px; border:1px solid #1111" />
                </div>
            }

        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
    
}

